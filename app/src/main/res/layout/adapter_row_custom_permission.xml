<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@android:color/white">


    <ImageView
        android:id="@+id/adapter_row_custom_permission_icon_image_view"
        style="?android:attr/listSeparatorTextViewStyle"
        app:srcCompat="?android:attr/actionModeSelectAllDrawable"
        android:layout_height="32dp"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/adapter_row_custom_permission_name_text_view"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:textColor="#ff000000"
        android:gravity="center_vertical"
        android:text="@string/permission_name"
        android:height="16dp"
        android:fontFamily="sans-serif"
        android:textSize="12sp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:clickable="false" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/adapter_row_custom_permission_grant_or_revoke_switch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:theme="@style/AppTheme"/>
</LinearLayout>